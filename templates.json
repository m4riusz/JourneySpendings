{
    "targetTemplates": {
		"BaseTarget": {
			"platform": "iOS",
			"sources": [
				{
					"path": "${target_name}/Info.plist"
				},
				{
					"path": "${target_name}/Sources"
				},
				{
					"path": "${target_name}/Resources"
				}
			],
			"dependencies": [
				{
					"package": "SnapKit"
				},
				{
					"package": "RxSwift",
					"product": "RxSwift"
				},
				{
					"package": "RxSwift",
					"product": "RxCocoa"
				},
				{
					"package": "Swinject"
				},
				{
					"package": "RxDataSources"
				}
			]
		},
        "BaseUnitTest": {
            "type": "bundle.unit-test",
			"platform": "iOS",
			"sources": [
				{
					"path": "${tests_parent}/Tests",
					"excludes": ["**/__Snapshots__"]
				},
				{
					"path": "${tests_parent}/Info.plist"
				}
			],
            "dependencies": [
				{
					"target": "MobileApp"
				},
				{
					"package": "RxSwift",
					"product": "RxSwift"
				},
				{
					"package": "RxSwift",
					"product": "RxTest"
				},
				{
					"package": "RxSwift",
					"product": "RxCocoa"
				}
			],
            "settings": {
				"TEST_HOST": "$(BUILT_PRODUCTS_DIR)/MobileApp.app/MobileApp"
			}
        },
		"BaseFramework": {
			"type": "framework",
			"templates": [
				"BaseTarget"
			]
		},
		"BaseFrameworkUnitTest": {
            "templates": [
				"BaseUnitTest"
			],
			"dependencies": [
                {
					"framework": "${tests_parent}"
				},
				{
					"package": "SnapshotTesting"
				}
			]
		}
	}
}