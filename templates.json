{
    "targetTemplates": {
		"BaseTarget": {
			"platform": "iOS",
			"sources": [
				{
					"path": "${target_name}/Info.plist"
				},
				{
					"path": "${target_name}/Sources"
				},
				{
					"path": "${target_name}/Resources"
				}
			],
			"dependencies": [
				{
					"package": "SnapKit"
				},
				{
					"package": "RxSwift",
					"product": "RxSwift"
				},
				{
					"package": "RxSwift",
					"product": "RxCocoa"
				},
				{
					"package": "Swinject"
				},
				{
					"package": "RxDataSources"
				},
				{
					"package": "GRDB"
				},
				{
					"package": "RxGRDB"
				}
			],
			"preBuildScripts": [
				{
					"name": "Generate strings",
					"script": "./Scripts/StringGenerator.rb ${target_name} ${target_name}/Resources/en.lproj/${target_name}.strings ${target_name}/Resources/Generated/${target_name}Strings.swift",
					"inputFiles": ["${target_name}/Resources/en.lproj/${target_name}.strings"],
					"outputFiles": ["${target_name}/Resources/Generated/${target_name}Strings.swift"]
				},
				{
					"name": "Generate images",
					"script": "./Scripts/ImageGenerator.rb ${target_name} ${target_name}/Resources/Images.xcassets ${target_name}/Resources/Generated/${target_name}Images.swift",
					"inputFiles": ["${target_name}/Resources/Images.xcassets"],
					"outputFiles": ["${target_name}/Resources/Generated/${target_name}Images.swift"]
				},
				{
					"name": "Generate colors",
					"script": "./Scripts/ColorGenerator.rb ${target_name} ${target_name}/Resources/Colors.xcassets ${target_name}/Resources/Generated/${target_name}Colors.swift",
					"inputFiles": ["${target_name}/Resources/Colors.xcassets"],
					"outputFiles": ["${target_name}/Resources/Generated/${target_name}Colors.swift"]
				}
			]
		},
        "BaseUnitTest": {
            "type": "bundle.unit-test",
			"platform": "iOS",
			"sources": [
				{
					"path": "${tests_parent}/Tests",
					"excludes": ["**/__Snapshots__"]
				},
				{
					"path": "${tests_parent}/Info.plist"
				}
			],
            "dependencies": [
				{
					"target": "MobileApp"
				},
				{
					"package": "RxSwift",
					"product": "RxSwift"
				},
				{
					"package": "RxSwift",
					"product": "RxTest"
				},
				{
					"package": "RxSwift",
					"product": "RxCocoa"
				}
			],
            "settings": {
				"TEST_HOST": "$(BUILT_PRODUCTS_DIR)/MobileApp.app/MobileApp"
			}
        },
		"BaseFramework": {
			"type": "framework",
			"templates": [
				"BaseTarget"
			]
		},
		"BaseFrameworkUnitTest": {
            "templates": [
				"BaseUnitTest"
			],
			"dependencies": [
                {
					"framework": "${tests_parent}"
				},
				{
					"package": "SnapshotTesting"
				},
				{
					"target": "TestKit"
				}
			]
		}
	}
}