{
    "targetTemplates": {
		"BaseTarget": {
			"platform": "iOS",
			"sources": [
				{
					"path": "${target_name}/Info.plist"
				},
				{
					"path": "${target_name}/Sources"
				},
				{
					"path": "${target_name}/Resources"
				}
			],
			"dependencies": [
				{
					"package": "SnapKit"
				},
				{
					"package": "RxSwift"
				},
				{
					"package": "RxCocoa"
				},
				{
					"package": "Swinject"
				}
			]
		},
		"BaseApp": {
			"type": "application",
			"templates": [
				"BaseTarget"
			],
			"dependencies": [
				{
					"target": "About"
				},
				{
					"target": "Core"
				},
				{
					"target": "Journey"
				}
			]
		},
		"BaseFramework": {
			"type": "framework",
			"templates": [
				"BaseTarget"
			]
		},
		"BaseFrameworkUnitTest": {
			"type": "bundle.unit-test",
			"platform": "iOS",
			"sources": [
				{
					"path": "${framework_name}/Tests"
				},
				{
					"path": "${framework_name}/Info.plist"
				}
			],
			"dependencies": [
				{
					"framework": "${framework_name}",
					"target": "MobileApp"
				}
			],
			"settings": {
				"TEST_HOST": "$(BUILT_PRODUCTS_DIR)/MobileApp.app/MobileApp"
			}
		}
	}
}